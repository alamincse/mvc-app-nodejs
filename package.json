{
	"name": "MVC APP",
	"version": "1.0.0",
	"description": "A lightweight Node.js APP following MVC architecture without Express.",
	"main": "server.js",
	"author": "Al-Amin Sarker <cseal.amin.09@gmail.com>",
	"scripts": {
		"start": "node server.js",
		"dev": "nodemon server.js",
		"pm2:start": "pm2 start ecosystem.config.js --env development",
		"pm2:prod": "pm2 start ecosystem.config.js --env production",
		"pm2:staging": "pm2 start ecosystem.config.js --env staging",
		"pm2:stop": "pm2 stop mvc-app",
		"pm2:restart": "pm2 restart mvc-app",
		"pm2:delete": "pm2 delete mvc-app",
		"pm2:logs": "pm2 logs mvc-app"
	},
	"dependencies": {
		"dotenv": "^17.2.0",
		"formidable": "^3.5.4",
		"module-alias": "^2.2.3",
		"mysql": "^2.18.1",
		"sanitize-html": "^2.17.0"
	},
	"devDependencies": {
		"nodemon": "^3.1.10",
		"pm2": "^6.0.8"
	},
	"_moduleAliases": {
		"@app": "app",
	    "@controllers": "app/controllers",
	    "@controllers_web": "app/controllers/web",
	    "@controllers_api": "app/controllers/api",
	    "@middleware": "app/middleware",
	    "@models": "app/models",
	    "@providers": "app/providers",
	    "@config": "config",
	    "@database": "database",
	    "@helpers": "helpers",
	    "@public": "public",
	    "@routes": "routes",
	    "@system": "system",
	    "@views": "views"
	}
}
